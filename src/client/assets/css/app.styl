}

.docker-logo {
  height: 50px;
}

.swarm-node-group {
  margin-bottom: 15px;
}

.swarm-node {
  margin-bottom: 5px;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 7.5px;
  padding-right: 7.5px;
